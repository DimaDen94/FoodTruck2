<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="6dp"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_order"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@drawable/ic_inc"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/photo_order"
                        android:layout_alignLeft="@+id/title_order"
                        android:layout_alignStart="@+id/title_order"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@drawable/ic_inc"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="fffffffffffffffff"
                        android:textColor="@color/secondary_text"
                        android:textSize="24sp"
                        android:textStyle="bold|italic" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/price_order"
                        android:layout_alignEnd="@+id/title_order"
                        android:layout_alignRight="@+id/title_order"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/secondary"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:minWidth="210dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_d_count"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_inc"
                                android:paddingTop="4dp" />

                            <TextView
                                android:id="@+id/d_count"
                                android:layout_width="20dp"
                                android:layout_height="40dp"
                                android:layout_alignTop="@+id/btn_d_count"
                                android:layout_toEndOf="@+id/btn_d_count"
                                android:layout_toRightOf="@+id/btn_d_count"
                                android:fontFamily="sans-serif"
                                android:text="1"
                                android:textColor="@color/primary_text"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/btn_i_count"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignTop="@+id/d_count"
                                android:layout_toEndOf="@+id/d_count"
                                android:layout_toRightOf="@+id/d_count"
                                android:background="@drawable/ic_add"
                                android:paddingBottom="0dp"
                                android:paddingTop="4dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>